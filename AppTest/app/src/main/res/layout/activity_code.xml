<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".CodeActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Asynctask Kotlin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginBottom="10dp"
            android:src="@drawable/code_asynctask"
            android:layout_width="match_parent"
            android:layout_height="150dp"/>

        <TextView
            android:text="ColorPickerDialog Kotlin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginBottom="10dp"
            android:src="@drawable/code_color_dilalog"
            android:layout_width="match_parent"
            android:layout_height="150dp"/>

        <TextView
            android:text="Password Dialog Kotlin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginBottom="10dp"
            android:src="@drawable/code_dialog_password"
            android:layout_width="match_parent"
            android:layout_height="130dp"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>