<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.altamirano.fabricio.apptest">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.dialogs.PasswordDialogActivity"></activity>
        <activity android:name=".activities.dialogs.ColorPickerActivity" />
        <activity android:name=".activities.ListValidateActivity" />
        <activity android:name=".activities.ListSwipeActivity" />
        <activity android:name=".activities.ExpandableBasicActivity" />
        <activity android:name=".activities.BasicButtonsActivity" />
        <activity android:name=".activities.InfoUrlActivity" />
        <activity android:name=".activities.SquareBitmapActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.CircleBitmapActivity"
            android:label="@string/circle_image" />
        <activity android:name=".activities.OnBoardActivity" />
    </application>

</manifest>