    </style>

    <style name="AstTheme" parent="AstBaseTheme">
        <!-- Customize your theme here. -->
    </style>

    <style name="AstBaseTheme" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="colorPrimaryDark">@color/ast_background</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/ast_background</item>
    </style>

